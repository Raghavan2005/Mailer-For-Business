<Window x:Class="Mailer_For_Business.Windows.Dash.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailer_For_Business.Windows.Dash"
        mc:Ignorable="d"
        WindowStyle="None"
    
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        Background="#353643"
       
        Title="Dashboard" Height="750" Width="1400" Icon="/Windows/logo.png" MinWidth="500" MinHeight="600" Cursor="Arrow">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="10" CaptionHeight="0" ></WindowChrome>
    </WindowChrome.WindowChrome>




    <!-- Main Grid Start -->
    <Grid Cursor="Arrow">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"  ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- hearder start -->
        <Grid Background="#3A3D4C">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <Image Margin="5,5,5,5" Source="/Windows/Dash/Images/TitleLogo.png"></Image>
            </StackPanel>
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" Background="#3A3D4C" >
                <Border Grid.Column="0" Margin="0,10,20,0"  Background="#FF08198D"  BorderBrush="Transparent" Height='30' Width="60" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
                    <Button x:Name="guidebtn" Grid.Row="1"  Padding="2,2,2,2"  Width="auto"  Height="Auto"  Content="Guide" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="12" Background="{x:Null}" Cursor="Help" Click="guidebtn_Click"  >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGoldenrod"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border  Grid.Column="0" Margin="0,10,20,0" Background="#FF047C78"  BorderBrush="Transparent" Height='30' Width="60"  BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
                    <Button Grid.Row="1"  Padding="2,2,2,2"  Width="auto"  Height="Auto"  Content="Settings" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="12" Background="{x:Null}" Cursor="Hand" Click="setting_onclick"  >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGoldenrod"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border Grid.Column="0" Background="#FF9D8E07" BorderThickness="1,1,1,1" Height='30' CornerRadius="5,5,5,5" Width="60" Margin="0,10,10,0" >
                    <Button x:Name="testbtn"  Grid.Row="1" Padding="2,2,2,2"  Width="60" Height="auto"  Content="Test" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Rounded MT Bold" Background="{x:Null}" Cursor="Hand" Click="testButton_Click"  >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGoldenrod"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </Border>
                <Border Grid.Column="0" Background="#FF138607"  BorderBrush="Transparent" Height='30'  BorderThickness="1,1,1,1" Width="60" CornerRadius="5,5,5,5"  Margin="0,10,10,0" >
                    <Button x:Name="sendbtn"  Grid.Row="1"   Padding="2,2,2,2"  Height="Auto"  Content="Send" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="12" Background="{x:Null}" Click="send_clickbtn" Cursor="Hand" Margin="0,1,-1,1"  >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGoldenrod"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <Border Grid.Column="0" Margin="0,10,20,0" Background="#FF9D0909" Width="60"  BorderBrush="Transparent" Height='30'   BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
                    <Button x:Name="stopallbtn" Grid.Row="1"  Padding="2,2,2,2"  Width="auto"  Height="Auto"  Content="Stop All" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="12" Background="{x:Null}" Cursor="Hand" Click="stopallbtn_Click"  >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkGoldenrod"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>


                <Button x:Name="btnMin" Content="-" FontSize="20" Width="40" BorderBrush="Transparent" Background="Transparent" Foreground="White" Click="btnMin_Click" Cursor="Hand" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Green"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnMax" Content="□" FontSize="20"  Width="40"  BorderBrush="Transparent" Background="Transparent" Foreground="White" Click="btnMax_Click" Cursor="Hand" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Green"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button  MouseEnter="btn_MouseEnter" FontSize="20"  x:Name="btnClose" Content="X" Width="40" Height="40" BorderBrush="Transparent" Background="Transparent" Foreground="White" Click="btnClose_Click" Cursor="Hand"  >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Green"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Header End -->
        <!-- Main Sec Start -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <!-- sub 1 colum 1 Start -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"></RowDefinition>
                    <RowDefinition Height="65*"></RowDefinition>
                </Grid.RowDefinitions>
                <!-- Main colum 1 Start -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*">

                        </ColumnDefinition>
                        <ColumnDefinition Width="60*">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="1" Background="#3A3D4C" Padding="5,5,5,5" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Margin="5,5,5,0">

                        <Grid AllowDrop="True" Drop="Grid_Drop">

                            <Button x:Name="resetimport" Click="resetimport_Click" Width="25" Height="25" VerticalAlignment="Top"  HorizontalAlignment="Right" Foreground="{x:Null}" BorderBrush="{x:Null}" ToolTip="Clear All The Import Files" Margin="0,0,0,193" Cursor="Hand"  >
                                <Button.Background>
                                    <ImageBrush ImageSource="/Windows/Dash/Images/resetbtn.png"/>
                                </Button.Background>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="DarkGoldenrod"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Image Grid.Row="1" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="/Windows/Dash/Images/draganddrop.png" Margin="109,10,109,68"></Image>
                            <TextBlock Grid.Row="1"  Text="Drag and Drop" VerticalAlignment="Bottom" Margin="0,0,0,60" HorizontalAlignment="Center" FontSize="12" Foreground="#FF00FFED" FontFamily="Bahnschrift SemiBold SemiCondensed" RenderTransformOrigin="0.5,-0.579" Opacity="0.8" ></TextBlock>
                            <TextBlock Grid.Row="1"  Text="OR" VerticalAlignment="Bottom" Margin="0,0,0,40" HorizontalAlignment="Center" FontSize="15" Foreground="White" FontFamily="Bahnschrift SemiBold SemiCondensed" RenderTransformOrigin="0.5,-0.579" ></TextBlock>
                            <Border Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom" Background="#FF047C78"  BorderBrush="Transparent" Height='30' Width="100"  BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
                                <Button Grid.Row="1" Padding="5,5,5,5"  Width="auto" Height="29"  Content="Select Files" Click="SelectFiles_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White"  FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" >
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="Green"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>

                        </Grid>

                    </Border>

                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="0,15,0,0">
                        <Label Content="File Format :" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="16"/>

                        <ComboBox  Margin="2,0,0,0" Name="filetype" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="20" BorderBrush="{x:Null}" Foreground="Black" SelectionChanged="filetype_SelectionChanged">
                            <ComboBox.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="#FF00EDFF" Offset="1"/>
                                </LinearGradientBrush>
                            </ComboBox.Background>
                            <ComboBoxItem Content="CSV"></ComboBoxItem>
                            <ComboBoxItem Content="XLSX"></ComboBoxItem>


                        </ComboBox>

                    </StackPanel>
                    <Border Grid.Column="0" Background="#3A3D4C" Padding="5,5,5,5" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Margin="10,5,0,0">

                        <Grid>


                            <StackPanel Margin="0,0,0,0" Grid.RowSpan="2" Height="auto">

                                <CheckBox  Content="Auto File Type" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" IsEnabled="True" Foreground="White" FontFamily="Bahnschrift Light Condensed" IsChecked="True" AutomationProperties.Name="autofiletype" Name="autofiletype" Click="CheckBox_Clicked" Height="15" Width="97" FontSize="16"/>

                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                    <Border Background="#FF353643" Padding="5,5,5,5" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Margin="5,5,0,0">
                                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <Label Content="File Format "  HorizontalAlignment="Center"  VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="16" FontWeight="Bold"/>
                                            <Label Content="Select The File" x:Name="filetypetxt" HorizontalAlignment="Center"  VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14"/>

                                        </StackPanel>
                                    </Border>
                                </StackPanel >
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Stretch" Height="auto" HorizontalAlignment="Stretch">
                                    <Label Content="Total Row Found        :" HorizontalAlignment="Stretch" Margin="10,0,0,0" VerticalAlignment="Stretch" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="16"    FontWeight="Bold"/>
                                    <Label Content="0" x:Name="rowcount" HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="16"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Height="auto" HorizontalAlignment="Stretch">
                                    <Label Content="Total Column Found  :"  HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="16" FontWeight="Bold"/>
                                    <Label Content="0" x:Name="columncount"  HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="16"/>
                                </StackPanel>
                                <Grid Height="118">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70*"></ColumnDefinition>
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Width="141">
                                        <StackPanel Orientation="Horizontal" ToolTip="Pending">
                                            <Label Content="Pending Mail : " Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" Width="auto"/>
                                            <Ellipse Width="5" Height="5" Fill="#FFE0FF00"/>
                                            <Label x:Name="pendingtxt" Content="0/0" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" Width="45"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" ToolTip="Success" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <Label Content="Success Mail : " Width="auto"  HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14"/>
                                            <Ellipse Width="5" Height="5" Fill="#FF03FF00"/>
                                            <Label x:Name="successtxt" Content="0/0" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" Width="44" RenderTransformOrigin="0.5,0.5">
                                                <Label.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform/>
                                                        <SkewTransform AngleY="-0.499"/>
                                                        <RotateTransform/>
                                                        <TranslateTransform Y="-0.125"/>
                                                    </TransformGroup>
                                                </Label.RenderTransform>
                                            </Label>
                                        </StackPanel>




                                        <StackPanel Orientation="Horizontal" ToolTip="Invailed" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <Label Content="Invalid Mail    : " Width="auto" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" />
                                            <Ellipse Width="5" Height="5" Fill="Red"/>
                                            <Label x:Name="invaildtxt" Content="0/0" Margin="1,0,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" Width="48"/>

                                        </StackPanel>
                                    </StackPanel>
                                    <Label Content="Current Status"  Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFBAB5B5" FontFamily="Bahnschrift Light SemiCondensed" Width="118" Height="22" Background="{x:Null}"/>

                                    <TextBlock Padding="5" Grid.Column="1" Text="Please Click Start To see the Live Status." x:Name="liveupdatetxt" Width="auto" Height="auto"   TextWrapping="Wrap" Foreground="White" FontFamily="Bahnschrift SemiLight" Margin="0,22,0,0" FontSize="9"/>

                                </Grid>

                            </StackPanel>

                        </Grid>

                    </Border>


                </Grid>
                <!-- Main colum 1 end -->
                <!-- Main colum 2 start -->
                <Border Grid.Column="0" Grid.Row="1" Padding="10,10,10,10" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Margin="10,10,5,10" Background="#FF3A3D4C">

                    <Grid>

                        <TabControl Background="White" BorderBrush="#FFACACAC" Foreground="Black" FontFamily="Cascadia Mono ExtraLight">


                            <TabItem  x:Name="header" Header="CSV" BorderBrush="{x:Null}" Foreground="Black" Background="#FF3A3D4C" Margin="-2,-2,-46,0" FontFamily="Arial Rounded MT Bold" FontSize="14" Cursor="Arrow" >


                                <DataGrid Name="csvDataGrid" AutoGenerateColumns="True" Margin="0" BorderBrush="{x:Null}" Background="#FFCEC7C7" FontFamily="Candara Light" Cursor="Hand" />

                            </TabItem>

                        </TabControl>

                        <Label Content="Data Viewer and Editor" VerticalAlignment="Top" HorizontalAlignment="Right" Background="White" Foreground="#FF252525" FontFamily="Arial Rounded MT Bold" FontSize="14" Cursor="Arrow"/>

                    </Grid>

                </Border>
                <!-- Main colum 2 end -->
            </Grid>
            <!-- sub 1 colum 1 end -->
            <!-- sub 2 colum 2 start -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"></RowDefinition>
                    <RowDefinition Height="50*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Padding="10,10,10,10" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Margin="5,5,10,5" Background="#FF3A3D4C" Cursor="Arrow">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="100*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12*"></ColumnDefinition>

                                <ColumnDefinition Width="80*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Foreground="White" Grid.Column="0" FontFamily="Bahnschrift" FontSize="20" Content="Subject :"></Label>
                            <TextBox Text="Type Your Subject here" x:Name="subjecttxtbox" VerticalContentAlignment="Center" MaxLength="500" Width="auto" Grid.Column="1" Background="#FF353643" Padding="3,0,0,0" BorderBrush="#FF595B5E" BorderThickness="2,2,2,2" Foreground="White" SelectionTextBrush="#FF06A7A7" FontFamily="Arial Unicode MS" FontSize="14" Cursor="IBeam" TextChanged="subjecttxtbox_TextChanged" />
                        </Grid>
                        <Grid Grid.Column="0" Grid.Row="1" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"></ColumnDefinition>
                                <ColumnDefinition Width="75*"></ColumnDefinition>
                                <ColumnDefinition Width="30*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label VerticalAlignment="Top" Grid.Column="0"  Foreground="White" FontFamily="Bahnschrift"  FontSize="13" Content="Select Input Parameter" Height="28" Margin="0,2,0,0"/>
                            <ComboBox  Margin="5,4,0,0" Grid.Column="1" Name="parametercombox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="26" BorderBrush="{x:Null}" Foreground="Black" >

                                <ComboBox.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF00EDFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </ComboBox.Background>
                            </ComboBox>
                            <Border Grid.Column="2" HorizontalAlignment="Right" Margin="0,4,0,0" VerticalAlignment="Center"  Background="#FF545354" Width="auto"  BorderBrush="Transparent" Height='25'  Padding="10,0,10,0" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Cursor="Hand" >
                                <Button Padding="0" x:Name="previewbtn"  Margin="0,3,0,0"  VerticalAlignment="Top" HorizontalAlignment="Center" Width="auto"  Height="auto"  Content="Live Preview" Foreground="White" BorderBrush="{x:Null}" FontFamily="Arial Unicode MS" FontSize="12" Background="{x:Null}" Click="btn_preview"  >
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="Green"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="DarkGoldenrod"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>












                                </Button>
                            </Border>

                        </Grid>



